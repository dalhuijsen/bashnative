# <http://www.gnu.org/licenses/> <https://github.com/dalhuijsen/bashnative>



uptime () {
   RV=								# Return Value
   RT="$(</proc/uptime)"		# RawTime, Remaining Time
   DA="$(( 24 * 60 * 60 ))" 	# Days
   HR="$(( 60 * 60 ))"			# Hours
   RT=${RT%%.*}
   TD=$(( RT / DA ))				# Time in Days
   RT=$(( RT % DA ))
   TH=$(( RT / HR ))				# Time in Hours
   RT=$(( RT % HR ))
   TM=$(( RT / 60 ))				# Time in Minutes
   RT=$(( RT % 60 ))				# Seconds left ;-)
   
	if (( TD > 0 )); then
	   RV="${TD} day"
   	if (( TD > 1 )) ; then
   		RV="${RV}s"
	   fi
	fi
   if (( TH < 10 )); then
   	TH="0${TH}"
   fi
   if (( TM < 10 )); then
   	TM="0${TM}"
   fi
   RV="${RV}, ${TH}:${TM}"
   echo $RV
}

loadavg () {
	RV=                       # Return Value
	if [[ ! -r /proc/loadavg ]]; then
		echo "0, 0, 0"
	else
		LA="$(</proc/loadavg)"
		LA="${LA:0:14}"
		LA="${LA// /, }"
		echo $LA
	fi
}

currenttime () {
	if [[ ! -r /proc/stat ]] || [[ ! -r /proc/uptime ]]; then
		echo "00:00:00"
	else
		# 1970-01-01 00:00:00 UTC
		RV=								# returnval
		DA=$(( 60 * 60 * 24 ))		# days
		HO=$(( 60 * 60 ))				# hours 
   	UT="$(</proc/uptime)"		# uptime
	   UT=${UT%%.*}
		BT=0								# boottime
		F=0								# found
		for X in $(</proc/stat); do # when found btime take next value
			if [[ "$X" == "btime" ]]; then
				F=1
			else
				if (( F > 0 )); then
					BT="$X"
					F=0
				fi
			fi
		done
		TT="$(( BT + UT ))"
		TT="$(( TT % DA ))"
		TH="$(( TT / HO ))"
		TT="$(( TT % HO ))"
		TM="$(( TT / 60 ))"
		TT="$(( TT % 60 ))"
		echo "${TH}:${TM}:${TT}"
	fi
}
if [[ ! -r /proc/uptime ]]; then
   echo "uptime: Couldn't read /proc/uptime! Exiting." >&2
   exit -1
else
	TIME="$(currenttime)"
	UPTIME="$(uptime)"
	USERS="0"
	LOAD="$(loadavg)"
 	echo " ${TIME} up ${UPTIME}, ${USERS} users,   load average: ${LOAD}"
	/usr/bin/uptime
fi

