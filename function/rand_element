# @Usage:  rand_element SPACE SEPERATED LIST will return one element from that list
# @Depends: bashnative/rand

function rand_element () {
    local TH;
    for x in "$@"; do
        TH[${#TH[*]}]="$x";
    done
    unset TH[0]
    echo -n "${TH[$(($(rand "${#TH[*]}")+1))]}"
}
