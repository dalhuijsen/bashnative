# @Usage:  rand_element SPACE SEPARATED LIST will return one element from that list
# @Depends: bashnative/rand

rand_element () {
    local -a th=("$@")
    unset th[0]
    printf $'%s\n' "${th[$(($(rand "${#th[*]}")+1))]}"
}

